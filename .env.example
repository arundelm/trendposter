# ============================================
# TrendPoster Configuration
# Copy this to .env and fill in your values
# ============================================

# --- X/Twitter API (Free tier — get from developer.x.com) ---
X_API_KEY=
X_API_SECRET=
X_ACCESS_TOKEN=
X_ACCESS_SECRET=

# --- LLM Provider (at least one required) ---
# Anthropic Claude
ANTHROPIC_API_KEY=

# OpenAI
OPENAI_API_KEY=

# Google Gemini
GEMINI_API_KEY=

# Ollama (local models)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# Force a specific provider (optional): anthropic | openai | gemini | ollama
# LLM_PROVIDER=

# --- Bot Platform (at least one required) ---
# Telegram — get token from @BotFather
TELEGRAM_BOT_TOKEN=

# Discord — get token from discord.com/developers
DISCORD_BOT_TOKEN=

# --- Scheduling ---
# How often to check trends (minutes, default: 60)
CHECK_INTERVAL_MINUTES=60

# Allowed posting window in 24h format (default: 8-22)
POSTING_HOURS_START=8
POSTING_HOURS_END=22

# Minimum relevance score (0-100) to auto-post (default: 40)
MIN_RELEVANCE_SCORE=40

# Enable automatic posting on interval (default: true)
# Set to false for manual-only mode (use /top and /post)
AUTO_POST=true

# Your timezone (default: UTC)
TIMEZONE=UTC

# --- Advanced ---
# SQLite database path (default: ./data/trendposter.db)
# DATABASE_PATH=./data/trendposter.db

# Log level: DEBUG, INFO, WARNING, ERROR (default: INFO)
# LOG_LEVEL=INFO

# Max tweets in queue (default: 50)
# MAX_QUEUE_SIZE=50
